@model PetShopApp.Models.Login
@{
    ViewData["Title"] = "Login";
}
<h1 style="color:darkblue">Login</h1>
<form method="post">
    <div class="form-group col-md-6 mx-auto">
        <label asp-for="Name">UserName</label>
        <input asp-for="Name" placeholder="UserName" class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group col-md-6 mx-auto">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" placeholder="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="col-6 mx-auto">
        <button type="submit" class="btn btn-primary bg-dark">Login</button>
    </div>
</form>

